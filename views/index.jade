html
  head
    title Calificación de empresas de prácticas
    script(src='http://code.jquery.com/jquery-1.11.3.min.js')
    script(type='text/javascript').
      $(document).ready(function() {
        $('#crearEmpresa').click(function() {
          if ($('#empresa').val()){
            $('#crearEmpresa').attr('href', 'http://127.0.0.1:3000/crearEmpresa/:' + $('#empresa').val());
          } else {
            alert("No se puede crear una empresa sin introducir su nombre.");
          }
        });
        $('#crearCalificacion').click(function() {
          if ($('#empresa').val() && $('#alumno').val() && $('#calificacion').val()){
            $('#crearCalificacion').attr('href', 'http://127.0.0.1:3000/crearCalificacion/:' + $('#empresa').val() + '/:' + $('#alumno').val() + '/:' + $('#calificacion').val());
          } else {
            alert("No se puede crear una calificación sin introducir el nombre de la empresa, el nombre del alumno y el valor de la calificación.");
          }
        });
      });

  body
    | Empresa:&nbsp
    input#empresa(type='text', name='empresa')
    br
    br
    | Alumno:&nbsp
    input#alumno(type='text', name='alumno')
    | &nbspCalificación:&nbsp
    input#calificacion(type='text', name='calificacion')

    ul
      li
        a#crearEmpresa(href='http://127.0.0.1:3000/crearEmpresa') Crear empresa
      li
        a(href='http://127.0.0.1:3000/listarTodo') Listar todo
      li
        a#crearCalificacion(href='http://127.0.0.1:3000/crearCalificacion') Crear calificación
      li Listar calificaciones
      li Borrar calificación
      li Ranking empresas

    mensaje!=mensaje

    if(datos)
      table
        thead
          tr
            th Alumno
            th Calificación
        tbody
          each dato in datos
            tr
              td=dato.alumno
              td=dato.calificacion
